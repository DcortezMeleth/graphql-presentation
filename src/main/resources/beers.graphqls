schema {
    query: Query
    mutation: Mutation
}

type Query {
    allBeers: [Beer]
    allBreweries: [Brewery]
}

type Mutation {
    addBeer(name: String!, breweryName: String!): Beer
    addBrewery(name: String!): Brewery
}

type Beer {
    name: String!
    brewery: Brewery!
    volume: Int!
    abv: Float!
    score: Float!
}

type Brewery {
    name: String!
    score: Float!
    registered: LocalDate
    beers: [Beer]
}

scalar LocalDate